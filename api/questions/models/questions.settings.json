{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "questions",
  "info": {
    "name": "Questions"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "question": {
      "type": "string"
    },
    "answers": {
      "collection": "answers"
    },
    "questionerName": {
      "type": "string",
      "default": "Anonymous User"
    },
    "questionerEmail": {
      "type": "email"
    }
  }
}
