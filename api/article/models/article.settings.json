{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "Links": {
      "type": "component",
      "repeatable": true,
      "component": "widgets.links"
    },
    "requirements": {
      "type": "component",
      "repeatable": false,
      "component": "widgets.requirements"
    },
    "RelatedContent": {
      "type": "component",
      "repeatable": true,
      "component": "widgets.related-content"
    },
    "MediaGallery": {
      "type": "component",
      "repeatable": true,
      "component": "widgets.related-images"
    },
    "subtitle": {
      "type": "text"
    },
    "upvotes": {
      "type": "integer"
    },
    "tags": {
      "collection": "tags",
      "via": "articles",
      "dominant": true
    },
    "comments": {
      "collection": "comments",
      "via": "article"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "coauthors": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "coArticles",
      "dominant": true
    }
  }
}
