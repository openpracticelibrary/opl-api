{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "Links": {
      "type": "component",
      "repeatable": true,
      "component": "widgets.links"
    },
    "requirements": {
      "type": "component",
      "repeatable": false,
      "component": "widgets.requirements"
    },
    "byline": {
      "type": "component",
      "repeatable": false,
      "component": "widgets.byline",
      "required": true
    },
    "RelatedContent": {
      "type": "component",
      "repeatable": true,
      "component": "widgets.related-content"
    },
    "relatedImages": {
      "type": "component",
      "repeatable": true,
      "component": "widgets.related-images"
    }
  }
}
